<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:tree="sap.ui.table"
    xmlns:macros="sap.fe.macros"
	xmlns:macrosTable="sap.fe.macros.table"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="macrosui5.ext.Controller.ObjectPage"
    id="CreateSourcingProject"
>
    <m:Page
        id="_IDGenPage1"
        title="{i18n>appTitle}"
    >
        <m:headerContent>
            <m:Button
                id="createDocument"
                text="Create"
                press=".saveDocument"
                type="Emphasized"
            />
            <m:Button
                id="cancelButton"
                text="Cancel"
                press=".cancelDocument"
            />
        </m:headerContent>
        <m:Panel
            id="_IdGeneral"
            expandable="true"
            headerText="{i18n>NameAndType}"
            width="auto"
            class="sapUiResponsiveMargin">
            <m:content>
                <!-- <m:Label
                    id="_IDGenLabel1"
                    text="Name"
                    labelFor="Name"
                /> -->
	         <macros:Form layoutData="ResponsiveGridLayout" metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#nametype" id="proj1" title="Name and type"/>
            </m:content>
        </m:Panel>

        <m:Panel
            id="_IdDetails"
            expandable="true"
            headerText="{i18n>Details}"
            width="auto"
            class="sapUiResponsiveMargin">
            <m:content>
                <m:Label
                    id="_IDGenLabel2"
                    text="Details"
                    labelFor="Details"
                />            
            </m:content>
        </m:Panel>

        <m:Panel
            id="_IdTemplate"
            expandable="true"
            headerText="{i18n>Template}"
            width="auto"
            class="sapUiResponsiveMargin">
            <m:content>
                <m:Label
                    id="_IDGenLabel3"
                    text="Name3"
                    labelFor="Name3"
                />
            </m:content>
        </m:Panel>


        <m:Panel
            id="_IdExternal"
            expandable="true"
            headerText="{i18n>External}"
            width="auto"
            class="sapUiResponsiveMargin">
            <m:content>
                <m:Label
                    id="_IDGenLabel4"
                    text="External"
                    labelFor="External"
                />
            </m:content>
        </m:Panel>
    </m:Page>
</mvc:View>
